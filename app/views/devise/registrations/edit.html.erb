<div class="row">
  <div class="span4">
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "well", :method => :put }) do |f| %>
      <%= devise_error_messages! %>

      <fieldset>
        <legend>Edit <%= resource_name.to_s.humanize %></legend>
         <%= f.input :first_name %>  
         <%= f.input :last_name %>  
         <%= f.input :profile_name %>  
         <%= f.input :email %>  
         <%= f.input :password, placeholder: "leave blank if not changing", :autocomplete => "off" %>
         <%= f.input :password_confirmation, placeholder: "leave blank if not changing" %>  
         <%= f.input :current_password, placeholder: "needed to confirm changes" %>
         <%= f.button :submit, "Update" %>
      </fieldset> 
    <% end %>

    <h3>Cancel my account</h3>

    <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>

    <%= link_to "Back", :back %>
  </div>
</div>
